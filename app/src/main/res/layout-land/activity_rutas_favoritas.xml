<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <View
        android:id="@+id/green_rectangle"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:background="#3B7E26"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_background_opaco"
        android:elevation="6dp"
        android:gravity="center"
        android:queryHint="Buscar rutas"
        android:iconifiedByDefault="false"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="@+id/green_rectangle"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/green_rectangle"
        app:layout_constraintTop_toTopOf="@+id/green_rectangle"
        app:srcCompat="@drawable/yourblnaco" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/elreciclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10pt"
        android:layout_marginTop="20dp"
        android:clipToPadding="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_rectangle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:elevation="6dp"
        android:text="@string/rutasFavoritas"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
