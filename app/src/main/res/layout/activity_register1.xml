<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/fondobosqueblur">

    <EditText
        android:id="@+id/editUsuario"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center"
        android:hint="Usuario"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textColorHint="#99FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvFrase2"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@+id/tvFrase2"
        app:layout_constraintTop_toBottomOf="@+id/tvFrase2" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center"
        android:hint="Contraseña"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textColorHint="#99FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editUsuario"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editUsuario" />

    <EditText
        android:id="@+id/editPass2"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center"
        android:hint="Repetir contraseña"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textColorHint="#99FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editPass"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/round_btn_verde2"
        android:onClick="siguiente"
        android:text="sIGUIENTE"
        android:textColor="#99FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editPass2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editPass2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="154dp"
        android:layout_height="106dp"
        android:layout_marginTop="56dp"
        android:alpha=".65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoblanco" />

    <TextView
        android:id="@+id/tvFrase"
        style="@style/blancoXL"
        android:layout_width="359dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:alpha=".65"
        android:gravity="center"
        android:text="Bienvenido a Yourney"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/tvFrase2"
        style="@style/blanco1"
        android:layout_width="292dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:alpha=".65"
        android:gravity="center"
        android:text="Captura y comparte tus aventuras con el mundo.  ¡Únete hoy y comienza a crear tus propias historias de aventuras!"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/tvFrase" />


</androidx.constraintlayout.widget.ConstraintLayout>