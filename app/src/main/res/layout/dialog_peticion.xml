<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/green_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#65a34d"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="@string/solicitudes_amistad"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/green_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/green_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/green_rectangle"
        app:layout_constraintVertical_bias="0.533" />

    <EditText
        android:id="@+id/usuarioEdit"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded_background_verde"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_rectangle" />

    <EditText
        android:id="@+id/mensajeEdit"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/edittext_rounded_background_verde"
        android:hint="@string/mensaje"
        android:inputType="textMultiLine"
        android:lines="8"
        app:layout_constraintStart_toStartOf="@+id/usuarioEdit"
        app:layout_constraintTop_toBottomOf="@+id/usuarioEdit" />

    <Button
        android:id="@+id/btn_enviarSolicitud"
        android:layout_width="192dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn_verde"
        android:text="@string/enviar"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajeEdit" />


</androidx.constraintlayout.widget.ConstraintLayout>